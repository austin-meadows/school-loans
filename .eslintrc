{
  "root": true,
  "env": {
    "node": true
  },
  "ignorePatterns": ["**/.yarn/*", "**/.pnp.js"],
  "extends": ["plugin:vue/essential", "eslint:recommended", "@vue/airbnb", "@vue/prettier"],
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "overrides": [
    {
      "files": ["**/__tests__/*.{j,t}s?(x)", "**/tests/unit/**/*.spec.{j,t}s?(x)"],
      "env": {
        "mocha": true
      }
    }
  ]
}
