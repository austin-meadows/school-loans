{
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended",
    "@vue/airbnb",
    "@vue/prettier"
  ],
  "overrides": [
    {
      "env": {
        "mocha": true
      },
      "files": [
        "**/__tests__/*.{j,t}s?(x)",
        "**/tests/unit/**/*.spec.{j,t}s?(x)"
      ]
    }
  ],
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "root": true
}
